<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_width="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/border_redondo"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/tvItemSpeakerImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/item_cuadrado" />
        <TextView
            android:id="@+id/tvItemSpeakerName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Nombre del producto a la venta"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tvItemSpeakerWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marca del producto"
            android:textSize="9sp"
            android:textColor="@color/fourth"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text="$100.00"
                android:textColor="@color/primary"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="left|center_vertical"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00020E26"
                android:src="@drawable/ic_add_prod"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>