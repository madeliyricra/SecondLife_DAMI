<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.ui.fragments.DetailProductDialogFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="4dp"
                android:layout_margin="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imagePrincipal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/product" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/item" />
                <ImageView
                    android:id="@+id/imagePreview1"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/item" />
                <ImageView
                    android:id="@+id/imagePreview2"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/item" />
                <ImageView
                    android:id="@+id/imagePreview3"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/primary"
                    android:text="Nombre del producto" />
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary"
                    android:text="$99.90" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/primary"
                    android:text="Great words is nothing but just sounds tovar xarakteristikasi uchun tekst shunchaki Lorem ipsum dolor sit amet" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gray"
                    android:text="PRODUCT FEATURES" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/primary"
                    android:text="· Multiple flight modes" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/primary"
                    android:text="· Multiple flight modes" />
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/primary"
                    android:text="· Multiple flight modes" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingRight="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/border_redondo"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    android:src="@drawable/ic_notfavorite" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary"
                    android:background="@drawable/border_redondo"
                    android:textColor="@color/white"
                    android:text="Añadir al carrito"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>