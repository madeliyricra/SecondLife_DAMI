<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_marginBottom="10dp"
        tools:context=".view.ui.fragments.ProfileInformationDialogFragment"
        android:background="#00020E26">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <!--seccion de informacion personal-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:visibility="gone"
                    app:cardElevation="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/border_profile"
                                android:padding="10dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="50dp">
                                <EditText
                                    android:id="@+id/txtName"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/line_bottom"
                                    android:drawableLeft="@drawable/ic_text_profile"
                                    android:drawablePadding="10dp"
                                    android:gravity="center_vertical"
                                    android:hint="Nombre"
                                    android:inputType="textEmailAddress"
                                    android:paddingLeft="10dp"
                                    android:textSize="14dp" />

                                <EditText
                                    android:id="@+id/txtLastName"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/line_bottom"
                                    android:drawableLeft="@drawable/ic_text_profile"
                                    android:drawablePadding="10dp"
                                    android:gravity="center_vertical"
                                    android:hint="Apellido"
                                    android:inputType="textEmailAddress"
                                    android:paddingLeft="10dp"
                                    android:textSize="14dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">

                                    <EditText
                                        android:id="@+id/txtDNI"
                                        android:layout_width="0dp"
                                        android:layout_height="40dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_weight="1.4"
                                        android:background="@drawable/line_bottom"
                                        android:drawableLeft="@drawable/ic_iden_profile"
                                        android:drawablePadding="10dp"
                                        android:hint="Número de DNI"
                                        android:inputType="phone"
                                        android:paddingLeft="10dp"
                                        android:textSize="14dp" />
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="40dp"
                                        android:layout_weight="1"
                                        android:gravity="center">
                                        <ImageButton
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/line_bottom"
                                            android:src="@drawable/ic_calendar_profile"/>
                                        <EditText
                                            android:id="@+id/txtDate"
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_weight="4"
                                            android:background="@drawable/line_bottom"
                                            android:hint="Fecha de nac."
                                            android:inputType="date"
                                            android:paddingLeft="10dp"
                                            android:textSize="14dp" />
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <EditText
                                        android:id="@+id/txtEmail"
                                        android:layout_width="0dp"
                                        android:layout_height="40dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_weight="1.5"
                                        android:background="@drawable/line_bottom"
                                        android:drawableLeft="@drawable/ic_email_profile"
                                        android:drawablePadding="10dp"
                                        android:hint="Example@gmail.com"
                                        android:inputType="textEmailAddress"
                                        android:paddingLeft="10dp"
                                        android:textSize="14dp" />
                                    <EditText
                                        android:id="@+id/txtTelephone"
                                        android:layout_width="0dp"
                                        android:layout_height="40dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/line_bottom"
                                        android:drawableLeft="@drawable/ic_atention"
                                        android:drawablePadding="10dp"
                                        android:hint="Teléfono"
                                        android:inputType="phone"
                                        android:paddingLeft="10dp"
                                        android:textSize="14dp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_profile"
                                android:padding="10dp"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                    <EditText
                                        android:id="@+id/txtUser"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/line_bottom"
                                        android:drawableLeft="@drawable/ic_person_profile"
                                        android:drawablePadding="10dp"
                                        android:hint="Usuario"
                                        android:inputType="text"
                                        android:paddingLeft="10dp"
                                        android:textSize="14dp" />
                                    <EditText
                                        android:id="@+id/txtPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/line_bottom"
                                        android:drawableLeft="@drawable/ic_key_profile"
                                        android:drawablePadding="10dp"
                                        android:hint="Contraseña"
                                        android:inputType="textPassword"
                                        android:paddingLeft="10dp"
                                        android:textSize="14dp" />
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="120dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/password_profile"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center">
                                <Button
                                    android:id="@+id/btnSave"
                                    android:layout_width="150dp"
                                    android:layout_height="40dp"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:backgroundTint="@color/secondary"
                                    android:background="@drawable/border_redondo"
                                    android:text="Guardar"
                                    android:textSize="11sp"
                                    android:fontFamily="sans-serif"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal">
                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:gravity="center"
                                android:background="@drawable/circle_profile">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_profile" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!--seccion de direcciones-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:cardElevation="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/border_profile"
                                android:padding="10dp"
                                android:layout_marginTop="250dp">
                                <Button
                                    android:id="@+id/btn_myaddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/primary"
                                    android:background="@drawable/border_banner_2"
                                    android:backgroundTint="@color/fifth"
                                    android:text="MI UBICACIÓN ACTUAL"
                                    android:drawableLeft="@drawable/ic_myaddress"
                                    android:textSize="11sp"/>
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal">
                                   <TextView
                                       android:layout_width="0dp"
                                       android:layout_height="40dp"
                                       android:layout_weight="2.9"
                                       android:text="Mis direcciones"
                                       android:textSize="15sp"
                                       android:paddingTop="8dp"
                                       android:paddingBottom="8dp"
                                       android:drawableLeft="@drawable/line_vertical"
                                       android:textColor="@color/primary"/>
                                   <TextView
                                       android:layout_width="0dp"
                                       android:layout_height="40dp"
                                       android:layout_weight="1"
                                       android:text="Agregar"
                                       android:textSize="12sp"
                                       android:paddingTop="8dp"
                                       android:paddingBottom="8dp"
                                       android:gravity="center"
                                       android:textColor="@color/primary"
                                       android:shadowColor="@color/secondary"
                                       android:drawableRight="@drawable/ic_add_location" />
                               </LinearLayout>
                                <!--Lista de ubicaciones (solo 3)-->
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:padding="25dp"
                            android:background="@color/gray">
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!--seccion de compras-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBuy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:visibility="gone"
                    app:cardElevation="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/border_profile"
                                android:padding="10dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="50dp">
                                <!--Lista de ubicaciones (solo 3)-->
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvbuy"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"
                                    android:layout_marginTop="30dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="110dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_buy" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!--seccion de venta-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvSales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:visibility="gone"
                    app:cardElevation="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/border_profile"
                                android:padding="10dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="50dp">
                                <!--Lista de ubicaciones (solo 3)-->
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvsale"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"
                                    android:layout_marginTop="30dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="110dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_sale" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!--seccion de tarjetas-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:visibility="visible"
                    app:cardElevation="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="90dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="25dp"
                                android:paddingRight="25dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:background="@drawable/card_back">
                                    <!--nunmero de la tarjeta-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_horizontal"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginBottom="15dp">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:layout_weight="4"/>
                                        <EditText
                                            android:layout_width="0dp"
                                            android:layout_height="40dp"
                                            android:layout_weight="1"
                                            android:hint="CVV"
                                            android:textSize="12sp"
                                            android:padding="5dp"
                                            android:background="@drawable/back_edit_profile"
                                            android:gravity="center"
                                            android:textColor="@color/primary" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_horizontal">
                                        <EditText
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="9999"
                                            android:letterSpacing="0.2"
                                            android:textSize="13sp"
                                            android:layout_marginRight="10dp"/>
                                        <EditText
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="9999"
                                            android:textSize="13sp"
                                            android:letterSpacing="0.2"
                                            android:layout_marginRight="10dp"/>
                                        <EditText
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="9999"
                                            android:letterSpacing="0.2"
                                            android:textSize="13sp"
                                            android:layout_marginRight="10dp"/>
                                        <EditText
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="9999"
                                            android:letterSpacing="0.2"
                                            android:textSize="13sp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="30dp">
                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="40dp"
                                                android:layout_weight="3">
                                                <EditText
                                                    android:layout_width="160dp"
                                                    android:layout_height="match_parent"
                                                    android:textSize="12sp"
                                                    android:padding="10dp"
                                                    android:background="@drawable/back_edit_profile"
                                                    android:hint="Propietario"
                                                    android:textColor="@color/primary"/>
                                            </LinearLayout>
                                            <EditText
                                                android:layout_width="0dp"
                                                android:layout_height="40dp"
                                                android:layout_weight="1"
                                                android:hint="fec. venc."
                                                android:textSize="12sp"
                                                android:padding="10dp"
                                                android:background="@drawable/back_edit_profile"
                                                android:gravity="center"
                                                android:textColor="@color/primary" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="vertical"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@drawable/border_profile"
                                    android:padding="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Mis tarjetas"
                                        android:textSize="18sp"
                                        android:drawableLeft="@drawable/line_vertical"
                                        android:textColor="@color/primary"/>
                                    <!--Lista de tarjetas (solo 3)-->
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvcard"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="10dp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp">
                                    <Button
                                        android:layout_width="125dp"
                                        android:layout_height="wrap_content"
                                        android:text="Agregar"
                                        android:textSize="10sp"
                                        android:layout_marginLeft="10dp"
                                        android:textColor="@color/black"
                                        android:backgroundTint="@color/fifth"
                                        android:background="@drawable/border_redondo"
                                        android:drawableLeft="@drawable/ic_add_card"
                                        android:padding="10dp"/>
                                    <Button
                                        android:layout_width="125dp"
                                        android:layout_height="wrap_content"
                                        android:text="Modificar"
                                        android:textSize="10sp"
                                        android:layout_marginLeft="10dp"
                                        android:textColor="@color/black"
                                        android:backgroundTint="@color/fifth"
                                        android:background="@drawable/border_redondo"
                                        android:drawableLeft="@drawable/ic_modify_card"
                                        android:padding="10dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/card"/>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/back_pane_profile"
        app:elevation="0dp">
        <Toolbar
            android:id="@+id/toolbarConference"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnArrow_left"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/hover_arrow_left"/>

                <TextView
                    android:id="@+id/tv_title_profile"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="Título"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnhome"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/hover_home" />
            </LinearLayout>
        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
</RelativeLayout>