<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/tvItemSpeakerImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altoImageViewHome"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tvItemSpeakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Expositor"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="@dimen/tamanioTitulo"
            android:textColor="@color/dark_blue_700"/>
        <TextView
            android:id="@+id/tvItemSpeakerWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajo Expositor"
            android:gravity="center_horizontal"
            android:textSize="@dimen/tamanioSubtitulo"
            android:textColor="@color/ddark_blue_700"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>